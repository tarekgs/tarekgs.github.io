---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = "Hey I'm Tarek", description = "Personal website of Tarek Saoud" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Reenie+Beanie&display=swap" rel="stylesheet">
    <style>
      nav a {
        transition: color 0.3s ease;
      }
      nav a:hover,
      nav a.active {
        color: #1e40af !important;
      }

      @media (max-width: 768px) {
        header {
          padding-left: 2rem !important;
          padding-right: 1rem !important;
          padding-top: 40px !important;
          padding-bottom: 0 !important;
        }
        header > div {
          flex-direction: column !important;
          align-items: flex-start !important;
          gap: 0;
        }
        header .site-title {
          font-size: 1.5rem !important;
          line-height: 40px !important;
          margin-bottom: 0 !important;
        }
        nav {
          gap: 0.5rem !important;
          flex-wrap: wrap !important;
          margin-top: 0 !important;
        }
        nav a {
          font-size: 1.125rem !important;
          line-height: 40px !important;
        }
        main {
          margin-left: 0 !important;
          padding-left: 2rem !important;
          padding-right: 1rem !important;
          padding-top: 40px !important;
        }
      }
    </style>
  </head>
  <body class="text-gray-900" style="font-family: 'Reenie Beanie', cursive;">
    <header class="relative z-10" style="background-color: transparent; padding-top: 40px; padding-bottom: 40px; padding-left: 100px; padding-right: 2rem;">
      <div class="flex justify-between items-baseline">
        <a href="/" class="site-title" style="font-size: 2rem; font-weight: 400; color: #1e40af; text-decoration: none; line-height: 40px;">
          Tarek Saoud
        </a>
        <nav class="flex gap-8" style="align-items: baseline;">
          <a href="/" class={Astro.url.pathname === '/' ? 'active' : ''} style="font-size: 1.75rem; color: #374151; text-decoration: none; line-height: 40px;">Home</a>
          <a href="/likes/bookshelf" class={Astro.url.pathname.includes('/bookshelf') ? 'active' : ''} style="font-size: 1.75rem; color: #374151; text-decoration: none; line-height: 40px;">Bookshelf</a>
          <a href="/likes/startups" class={Astro.url.pathname.includes('/startups') ? 'active' : ''} style="font-size: 1.75rem; color: #374151; text-decoration: none; line-height: 40px;">Startups</a>
          <a href="/contact" class={Astro.url.pathname === '/contact' ? 'active' : ''} style="font-size: 1.75rem; color: #374151; text-decoration: none; line-height: 40px;">Contact</a>
        </nav>
      </div>
    </header>

    <main class="max-w-7xl mx-auto px-8 relative z-10" style="padding-top: 40px; line-height: 40px; margin-left: 100px;">
      <slot />
    </main>
  </body>
</html>